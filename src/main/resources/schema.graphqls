type Query{
    bookById(id:ID): Book
    posts: [Post!]
    books: [Book!]
    flowerposts: [FlowerPost!]
    fruitposts: [FruitPost!]
}
type Mutation{
    createPost(date:String,title:String,body:String):Post!
#    this POST refers to type POST
    createFlowerPost(date:String,title:String,body:String):FlowerPost!
    createFruitPost(date:String,title:String,body:String):FruitPost!
}

type Post{
id:ID
date:String
title:String
body:String
}

type FlowerPost{
    id:ID
    date:String
    title:String
    body:String
}
type FruitPost{
    id:ID
    date:String
    title:String
    body:String
}

type Book{
  id:ID
   name:String
    pageCount:Int
    author:Author
}
type Author{
   id:ID
   firstname:String
    lastname:String
}

